    <div class="text-center">
        <h1>Update Toys</h1>
    </div>
    <form action="/edit/{{products._id}}" method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" placeholder="Enter Name" name="txtName" value="{{products.name}}">
    </div>
        <label for="price">Price:</label>
        <input type="text" class="form-control" id="price" placeholder="Enter Price" name="txtPrice" value="{{products.price}}">
    </div>
        <label for="picture">Image:</label>
        <input type="text" class="form-control" id="picture" placeholder="Enter Picture URL" name="txtPicture" value="{{products.picture}}">
    </div>
        <label for="description">Description:</label>
        <input type="text" class="form-control" id="description" placeholder="Enter description" name="txtDescription"value="{{products.description}}">
    </div>    
        <br>
        <button type="submit" value="Update" class="btn btn-primary">Update</button>
        <a href="/" class="btn btn-info">&lt;&lt;&nbsp;Index</a>
    </form>
